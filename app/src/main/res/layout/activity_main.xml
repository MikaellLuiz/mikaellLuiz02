<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="458dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="30dp"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/plusBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:text="+"
                android:textColor="#70AEC8"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="34sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/subBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:text="-"
                android:textColor="#61B5D6"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="34sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/dividerBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:text="/"
                android:textColor="#61B5D6"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="34sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/multipBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:text="X"
                android:textColor="#61B5D6"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="34sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/memPlusBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:text="M+"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/memSubBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:text="M-"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/memRecBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:enabled="false"
                android:text="MR"
                android:textColor="#354551"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/memCleBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:enabled="false"
                android:text="MC"
                android:textColor="#354551"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/MXbt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#171C22"
                android:text="MX"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20dp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/n6Bt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/n1Bt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/n2Bt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Button
                android:id="@+id/n3Bt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/n0Bt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9DCBF0"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/comBt"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9BC9F4"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

            <Button
                android:id="@+id/comBt4"
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                android:backgroundTint="#171C22"
                android:textColor="#9BC9F4"
                android:textColorHighlight="#171C22"
                android:textColorLink="#171C22"
                android:textSize="20sp"
                app:iconTint="#171C22"
                app:rippleColor="#171C22"
                app:strokeColor="#171C22" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:hint="Valor 1"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#225C6E"
        android:textColorHint="#0E272F"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="9dp"
        android:ems="10"
        android:hint="Valor 2"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColor="#225C6E"
        android:textColorHint="#0D242B"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Resultado"
        android:textAlignment="center"
        android:textColor="#225C6E"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        tools:layout_editor_absoluteX="121dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#61B4D5"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnFinalizar"
        tools:layout_editor_absoluteX="1dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="#226580"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFinalizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#225C6E"
        android:text="Finalizar"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>